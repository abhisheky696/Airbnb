<style>
    .search {
        margin-left: auto;
    }
    .search input {
        padding: 0.5rem 1rem 0.5rem 1rem;
        border-radius: 2rem;
    }
    .search button {
        padding: 0 1rem 0 1rem;
        border-radius: 2rem;
    }
    .input-box {
        width:15rem;
        border:1px solid black;
    }
    .search-btn {
        border-radius:8px;
        border:1px solid black;
        padding-left:10px;
        padding-right:10px;
    }
    .add-home {
        white-space: nowrap;
    }
</style>
<div>
    <nav class="navbar navbar-expand-md bg-body-white border-bottom fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/listings">
                <img
                    width="100px"
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/69/Airbnb_Logo_B%C3%A9lo.svg/768px-Airbnb_Logo_B%C3%A9lo.svg.png"
                />
            </a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNavAltMarkup"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="/listings"><b>Home</a></b>
                </div>  
                <div class="ms-auto">
                    <form class="d-flex" role="search" action="/listings/search" method="GET">
                        <input
                            class="input-box form-control me-2"
                            type="search"
                            placeholder="Search...."
                            aria-label="Search"
                            name="title"
                        />
                        <button class="search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
                <div class="navbar-nav ms-auto">
                    <a class="add-home nav-link" href="/listings/new"
                        ><b>Airbnb your home</b>
                    </a>
                    <% if(currUser) { %>
                        <a class="nav-link" href="/logout"><b>LogOut</b></a>
                    <% } %> <% if(!currUser) { %>
                    <a class="nav-link" href="/signup"><b>SignUp</b></a>
                    <a class="nav-link" href="/login"><b>Login</b> </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</div>
